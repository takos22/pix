<Ui::InformationWrapper>
  <:default>
    {{#if @groupName}}
      <Ui::Information>
        <:title>
          {{@groupName}}
        </:title>
        <:content>
          {{@group}}
        </:content>
      </Ui::Information>
    {{/if}}
    <Ui::Information>
      <:title>
        {{t "components.login-method"}}
      </:title>
      <:content>
        {{@connectionMethods}}
      </:content>
    </Ui::Information>
  </:default>
</Ui::InformationWrapper>